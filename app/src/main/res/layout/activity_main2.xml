<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.slee7357.sqlitetest.Main2Activity">

    <EditText
        android:id="@+id/txt_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_userEmail"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_userEmail"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:text=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txt_userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_userPassword1"
        android:layout_alignStart="@+id/txt_userPassword1"
        android:layout_below="@+id/txt_userName"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:text=""
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txt_userPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignLeft="@+id/txt_userPassword2"
        android:layout_alignStart="@+id/txt_userPassword2"
        android:layout_below="@+id/txt_userEmail"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txt_userPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/txt_userPassword2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Add" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_userName"
        android:layout_alignBottom="@+id/txt_userName"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:text="@string/userName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_userEmail"
        android:layout_alignBottom="@+id/txt_userEmail"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:text="@string/email" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_userPassword1"
        android:layout_alignBottom="@+id/txt_userPassword1"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:text="@string/password" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_userPassword1"
        android:layout_marginTop="17dp"
        android:text="@string/confirmPassword" />
</RelativeLayout>
